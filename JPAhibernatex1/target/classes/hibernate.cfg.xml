<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">seu_driver</property>
        <property name="hibernate.connection.url">sua_url</property>
        <property name="hibernate.connection.username">seu_usuario</property>
        <property name="hibernate.connection.password">sua_senha</property>
        <property name="hibernate.dialect">seu_dialect</property>
        
        <!-- Mapeamento de entidades -->
        <mapping class="com.example.User" />
        <mapping class="com.example.Address" />
        
    </session-factory>
</hibernate-configuration>